<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/loadFileData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="loadDataFromFile"
            android:text="Load Data" />

        <Button
            android:id="@+id/previousFromFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="loadDataFromFile"
            android:text="Previous" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/LoadedNmaeFromFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name         :"
            android:textAppearance="?android:attr/textAppearanceMedium" />


        <EditText
            android:id="@+id/showLoadedNameFromFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/LoadedPasseordFromFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password : "
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <EditText
            android:id="@+id/showLoadedPasseordFromFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>

